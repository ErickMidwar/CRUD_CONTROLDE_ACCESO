<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ControlDeAcceso.CRUD.controller.LoginController"
            prefWidth="400" prefHeight="300"
            style="-fx-background-color: linear-gradient(to bottom, #2c3e50, #4ca1af);"
            stylesheets="@style.css">

    <children>
        <VBox alignment="CENTER" spacing="10" AnchorPane.topAnchor="40" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50">
            <Label text="Control de Acceso" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>
            <Label text="Iniciar Sesión" style="-fx-text-fill: white; -fx-font-size: 14px;"/>

            <TextField fx:id="dniField" promptText="DNI" maxWidth="250"/>
            <PasswordField fx:id="passwordField" promptText="Contraseña" maxWidth="250"/>

            <Button text="Ingresar" onAction="#handleLogin" maxWidth="250" style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
            <Label fx:id="errorLabel" textFill="white" style="-fx-text-fill: #ffcccc;"/>

        </VBox>
    </children>
</AnchorPane>
