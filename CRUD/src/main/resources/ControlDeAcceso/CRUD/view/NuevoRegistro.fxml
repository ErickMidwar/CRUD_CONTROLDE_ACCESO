<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="ControlDeAcceso.CRUD.controller.NuevoRegistroController"
            prefWidth="400" prefHeight="500"
            stylesheets="@style.css">
    <VBox alignment="CENTER" spacing="10" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">
        <Label text="Registrar Nueva Asistencia" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <TextField fx:id="txtNombre" promptText="Nombre completo" />
        <TextField fx:id="txtDni" promptText="DNI" />
        <TextField fx:id="txtProfesion" promptText="ProfesiÃ³n" />

        <!-- ComboBox sin items en FXML -->
        <ComboBox fx:id="cbTipo" promptText="Tipo de usuario" />

        <TextField fx:id="txtHoraIngreso" promptText="Hora de ingreso (HH:mm)" />
        <TextField fx:id="txtHoraSalida" promptText="Hora de salida (HH:mm)" />

        <HBox spacing="10">
            <Button text="Guardar" onAction="#handleGuardar" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
